<Window x:Class="SurveyHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SurveyHelper" 
        xmlns:customControl="clr-namespace:SurveyHelper.View"
        mc:Ignorable="d" FontFamily="Century Gothic"
        Title="MainWindow" Height="700" Width="500" Background="#e6f7f7">
    <Grid>
        <StackPanel Margin="0,20,0,0">
            <customControl:PropertyControl NameProperty="ID" TextProperty="{Binding Patient.ID}"  />
            <customControl:PropertyControl NameProperty="Name" TextProperty="{Binding Patient.Name}"  />
        </StackPanel>
    </Grid>
</Window>
